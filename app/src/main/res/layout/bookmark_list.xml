<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvBmBoardTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:text="게시글 이름"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBmTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="날짜"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/tvBmBoardTitle"
        app:layout_constraintTop_toBottomOf="@+id/tvBmBoardTitle" />

    <TextView
        android:id="@+id/tvBmBoardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:text="게시판이름"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tvBmTime"
        app:layout_constraintTop_toBottomOf="@+id/tvBmTime" />

    <TextView
        android:id="@+id/tvBmNick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="작성자"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="@+id/tvBmTime"
        app:layout_constraintStart_toEndOf="@+id/tvBmTime"
        app:layout_constraintTop_toTopOf="@+id/tvBmTime" />

    <ImageView
        android:id="@+id/ivBmBookmark"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mark_white" />
</androidx.constraintlayout.widget.ConstraintLayout>